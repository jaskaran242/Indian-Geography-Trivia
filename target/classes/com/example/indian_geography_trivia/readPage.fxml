            <ImageView fx:id="backButtonImageView" fitHeight="100.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../../images/back_button_img.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Label fx:id="contentLabel" alignment="TOP_LEFT" layoutX="100.0" layoutY="154.0" prefHeight="500.0" prefWidth="1100.0" textFill="#c49800" wrapText="true">
         <font>
            <Font name="Modern No. 20" size="26.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
